<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:background="#555"
	android:padding="10dip" android:layout_width="fill_parent"
	android:layout_height="70dip">


	    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:prompt="@string/Manoever" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:prompt="@string/ManoeverDauer" />
	    
            	    <Button
                        android:id="@+id/mayday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@string/ButtonClick"
                        android:text="Go" />        

</LinearLayout>
